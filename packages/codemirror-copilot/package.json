{
  "name": "codemirror-copilot",
  "version": "0.0.4",
  "type": "module",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asadm/codemirror-copilot.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --ext 'ts' --exec \"npm run build && npm run copytowebsite\"",
    "lint": "eslint --ext .ts,.tsx src",
    "copytowebsite": "cp -R dist ../../website/",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "build": "tsc && vite build && npm run copytowebsite",
    "prepublish": "npm run lint && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.2",
    "prettier": "3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.7.2"
  },
  "engines": {
    "node": "*"
  }
}
